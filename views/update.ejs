<!-- update.ejs -->
<div class="container">
<form action="/admin/update/<%= bouquet._id %>" method="POST">
    <div class="form-group">
      <label for="name" style="margin: 10px;">Name</label>
      <input type="text" id="name" name="name" class="form-control" style="margin: 10px;" value="<%= bouquet.flowerName %>" required>
    </div>
    <div class="form-group">
      <label for="price"style="margin: 10px;">Price</label>
      <input type="number" id="price" name="price" class="form-control" style="margin: 10px;" value="<%= bouquet.flowerPrice %>" required>
    </div>
    <!-- Добавьте другие поля, которые вы хотите позволить администратору обновлять -->
    <button type="submit" class="btn btn-primary" style="margin: 10px;">Update</button>
  </form>
</div>